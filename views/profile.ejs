    <header id="header">
        <button id="toggleSidebar" class="btn btn-light d-md-none">☰</button>
        <div class="d-flex justify-content-between align-items-center px-4 py-2">
            <h2 class="d-none d-md-block">Admin Panel</h2>
            <div class="d-flex align-items-center">
                <% if (user) { %>
                    <span class="me-3">Welcome, <strong><%= user.name %></strong></span>
                    <a href="/profile" class="btn btn-light">Profile</a>
                    <a href="/logout" class="btn btn-light">Logout</a>
                <% } else { %>
                    <a href="/login" class="btn btn-light">Login</a>
                <% } %>
            </div>
        </div>
    </header>
    

    <!-- Content -->
    <div class="content p-4">
        <div class="col-lg-6">
            <div class="card p-5">
                <h2 class="fw-bold pb-4">User Profile</h2>
                <div class="mb-2">
                    <label class="fw-bold">Name:</label>
                    <p><%= user.name %></p>
                </div>
                <div>
                    <label class="fw-bold">Email:</label>
                    <p><%= user.email %></p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('toggleSidebar').addEventListener('click', function() {
            var sidebar = document.getElementById('sidebar');
            var header = document.getElementById('header');
            var content = document.querySelector('.content');
            
            // Toggle the 'collapsed' class on sidebar, header, and content
            sidebar.classList.toggle('collapsed');
            header.classList.toggle('collapsed');
            content.classList.toggle('collapsed');
        });
    </script>
</body>
</html>


